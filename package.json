{
  "name": "arba-delivery-frontend",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "build:enhanced": "node scripts/build-error-handler.js",
    "build:validate": "npm run build && npm run validate:assets",
    "build:no-typecheck": "next build --no-lint && echo 'Build completed without TypeScript checking'",
    "build:analyze": "ANALYZE=true next build",
    "build:performance": "npm run build && node scripts/performance-audit.js",
    "start": "next start",
    "lint": "eslint",
    "test": "jest",
    "test:watch": "jest --watch",
    "validate:assets": "node scripts/validate-assets.js",
    "validate:assets:production": "NODE_ENV=production node scripts/validate-assets.js",
    "performance:audit": "lighthouse http://localhost:3000 --output=json --output-path=./performance-report.json",
    "performance:build": "node scripts/performance-audit.js",
    "performance:runtime": "node scripts/runtime-performance-validator.js",
    "performance:validate": "npm run performance:build && npm run performance:runtime",
    "bundle:analyze": "npm run build:analyze",
    "deployment:validate": "node ../scripts/deployment-pipeline-validator.js",
    "deployment:validate:full": "npm run deployment:validate -- --verbose"
  },
  "dependencies": {
    "@emotion/react": "^11.14.0",
    "@emotion/styled": "^11.14.1",
    "@hookform/resolvers": "^3.3.0",
    "@tanstack/react-query": "^5.0.0",
    "axios": "^1.6.0",
    "clsx": "^2.0.0",
    "critters": "^0.0.23",
    "framer-motion": "^12.23.26",
    "lucide-react": "^0.460.0",
    "next": "16.0.10",
    "react": "19.2.1",
    "react-dom": "19.2.1",
    "react-hook-form": "^7.48.0",
    "socket.io-client": "^4.7.0",
    "styled-components": "^6.1.19",
    "tailwind-merge": "^2.0.0",
    "zod": "^3.22.0",
    "zustand": "^4.5.7"
  },
  "devDependencies": {
    "@tailwindcss/postcss": "^4",
    "@testing-library/jest-dom": "^6.0.0",
    "@testing-library/react": "^14.0.0",
    "@testing-library/user-event": "^14.6.1",
    "@types/jest": "^29.0.0",
    "@types/node": "^20",
    "@types/react": "^19",
    "@types/react-dom": "^19",
    "@types/styled-components": "^5.1.36",
    "eslint": "^9",
    "eslint-config-next": "16.0.10",
    "fast-check": "^4.4.0",
    "jest": "^29.0.0",
    "jest-axe": "^10.0.0",
    "jest-environment-jsdom": "^29.0.0",
    "msw": "^2.12.4",
    "tailwindcss": "^4",
    "typescript": "^5",
    "web-vitals": "^4.2.4",
    "webpack-bundle-analyzer": "^4.10.1",
    "whatwg-fetch": "^3.6.20"
  }
}
